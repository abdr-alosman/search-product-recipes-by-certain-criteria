                    <tr>
                        <th>
                            Line Product
                        </th>
                        <th> Line Product Def</th>
                        <th> Amount </th>
                    </tr>

                </thead>
                @foreach (var item2 in Model.Where(x => x.Receipt == @item.Receipt && x.LINETYPE == "0"))
